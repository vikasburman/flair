{
    "engine": "./src/flair.build/(bundle)/flairBuild.js",
    "package": "./package.json",

    "dest": "./dist",
    "src": "./src",
    "processAsGroups": false,

    "fullBuild": false,
    "skipBumpVersion": false,
    "suppressLogging": false,

    "lint": true,
    "lintConfig": "./gulp/config/lint.json",
    "lintTypes": ["js", "css", "html"],

    "minify": true,
    "minifyConfig": "./gulp/config/minify.json",
    "minifyTypes": ["js", "css", "html"],

    "gzip": true,
    "gzipConfig": "./gulp/config/gzip.json",
    "gzipTypes": ["js", "css", "html", "txt", "xml", "md", "json", "svg", "jpg", "jpeg", "gif", "png"],

    "lintAssets": true,
    "minifyAssets": true,
    "gzipAssets": true,
    
    "lintResources": true,
    "minifyResources": true,
    "utf8EncodeResourceTypes": ["txt", "xml", "js", "md", "json", "css", "html", "svg"],

    "depsConfig": "./gulp/config/deps.json",
    "preBuildDeps": false,
    "postBuildDeps": true
}
